@page
@model eCommerceRazor.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="row pb-2">
        <h2 class="text-primary">Delete category</h2>
        <hr />
    </div>
    <div class="mb-3 row pt-1">
        <label asp-for="Category.Name" class="p-0"></label>
        <input asp-for="Category.Name" disabled type="text" class="form-control" />
    </div>
    <div class="mb-3 row pt-1">
        <label asp-for="Category.DisplayOrder" class="p-0"></label>
        <input asp-for="Category.DisplayOrder" disabled type="text" class="form-control" />

    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="/categories/index" class="btn btn-secondary form-control" style="width:150px">
                Back to list
            </a>
        </div>
    </div>
</form>



