@page
@model eCommerceRazor.Pages.Categories.IndexModel
<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category list
                </h2>
            </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
            <i class="bi bi-file-plus"></i> Create new </a>
        </div>  

      <div>
    </div>


<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display order
        </th>
        </tr>
        <thead>
            <tbody>
            @foreach(var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                 <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pen"></i>Edit</a>
                                <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i>Delete
                                </a>

                            </div>
                </td>

            </tr>
            }
        </tbody>
           
        </thead>
</table>
