@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var pr in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@pr.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@pr.Title</p>
                                <p class="card-title  text-dark  text-center">@pr.Author</p>

                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center m-0">List price: <span class="text-decoration-line-through">
                                    @pr.ListPrice.ToString("c")</span></p>


                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">As low as: <span>@pr.Price100.ToString("c")</span></p>
                                

                            </div>
                            <div class="pl-1">
                              <a asp-area="Customer" asp-action="Details" asp-route-id="@pr.Id" class=" btn btn-primary bg-gradient border-0 form-control" >Details</a>


                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>